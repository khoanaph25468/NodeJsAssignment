<%- include('../inc/top') %>

<div class="row">
  
  <h2>Thêm xe</h2>

  <%= msg %>
  <div style="margin-left: 50px">
    <form action="" method="post">
      <select name="theloai">
        <% listtheloai.forEach( (objTL) => { %>
        <option value="<%= objTL._id %>"><%= objTL.name %></option>
        <% }); %>
      </select>
      <div class="form-group">
        <label for="input-example">Nhập tên xe:</label>
        <input
          type="text"
          name="name"
          class="form-control"
          id="input-example"
          placeholder="Nhập vào đây"
        />
      </div>

      <div class="form-group">
        <label for="input-example">Nhập giá thị trường:</label>
        <input
          type="text"
          name="price"
          class="form-control"
          id="input-example"
          placeholder="Nhập vào đây"
        />
      </div>
      <div class="form-group mb-4">
        <label for="details">Chi tiết</label>
        <textarea
          class="form-control"
          name="description"
          cols="30"
          rows="12"
          placeholder="Chi tiết sản phẩm"
        ></textarea>
      </div>
      <button type="submit">Lưu</button>
    </form>
  </div>
</div>

<%- include('../inc/bottom') %>
