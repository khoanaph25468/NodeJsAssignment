<%- include('../inc/top') %>


<div class="row">
    <h2>Thêm sản phẩm V2</h2>
  
    <%= msg %>
    <div style="margin-left: 50px;">
      <form action="" method="post">
        <select name="theloai">
          <% listTheloai.forEach( (objTL)=>{ %>
  
          <option placeholder="Chọn Thể Loại" value="<%= objTL._id %>"><%= objTL.name %></option>
          <% } ) %>
        </select>
        <div class="form-group">
          <label for="input-example">Nhập Tên Sản Phẩm:</label>
          <input
            type="text"
            name="name"
            class="form-control"
            id="input-example"
            placeholder="Nhập vào đây"
          />
        <div class="form-group">
          <label for="input-example">Nhập Giá:</label>
          <input
            type="text"
            name="price"
            class="form-control"
            id="input-example"
            placeholder="Nhập vào đây"
          />
        </div>
        <div class="form-group mb-4">
          <label for="details">Customer Details</label>
          <textarea
            class="form-control"
            name="description"
            cols="30"
            rows="12"
            placeholder="Customer Details"
          ></textarea>
        </div>
        <button type="submit">Save</button>
      </form>
    </div>
  </div>

<div class="card" style="width: 18rem;">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">Card title</h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
  </div>

  <%- include('../inc/bottom') %>